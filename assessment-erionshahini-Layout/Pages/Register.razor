@page "/register"
@layout EmptyLayout
@using assessment_erionshahini_Layout.Service

<PageTitle>Register - Video Lab</PageTitle>

<div class="vl-login">
    <div class="vl-login-card">
        <div class="vl-login-brand">
            <span class="vl-login-logo">▶</span>
            <h1>Create account</h1>
            <p class="vl-login-tagline">Start uploading and annotating videos.</p>
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="vl-alert vl-alert-error" role="alert">@errorMessage</div>
        }

        <EditForm Model="registerRequest" OnValidSubmit="HandleRegister">
            <div class="vl-field">
                <label class="vl-label" for="email">Email</label>
                <InputText id="email" @bind-Value="registerRequest.Email" class="vl-input" placeholder="you@example.com" />
            </div>
            <div class="vl-field">
                <label class="vl-label" for="password">Password</label>
                <InputText id="password" type="password" @bind-Value="registerRequest.Password" class="vl-input" placeholder="At least 6 characters" />
            </div>
            <div class="vl-field">
                <label class="vl-label" for="confirm">Confirm password</label>
                <InputText id="confirm" type="password" @bind-Value="confirmPassword" class="vl-input" />
            </div>
            <button type="submit" class="vl-btn vl-btn-primary vl-btn-block" disabled="@isLoading">
                @if (isLoading)
                {
                    <span>Creating account…</span>
                }
                else
                {
                    <span>Create account</span>
                }
            </button>
        </EditForm>

        <p class="vl-register-footnote">
            Already have an account? <a href="/">Sign in</a>
        </p>
    </div>
</div>

@code {
    [Inject] private IJSRuntime JS { get; set; } = null!;
    [Inject] private IConfiguration Configuration { get; set; } = null!;
    [Inject] private TokenStorageService TokenStorage { get; set; } = null!;
    [Inject] private NavigationManager Navigation { get; set; } = null!;
    [Inject] private AuthenticationStateProvider AuthenticationStateProvider { get; set; } = null!;

    private RegisterForm registerRequest = new();
    private string confirmPassword = string.Empty;
    private string? errorMessage;
    private bool isLoading;

    private async Task HandleRegister()
    {
        errorMessage = null;

        if (string.IsNullOrWhiteSpace(registerRequest.Email) || string.IsNullOrWhiteSpace(registerRequest.Password))
        {
            errorMessage = "Email and password are required.";
            return;
        }
        if (registerRequest.Password.Length < 6)
        {
            errorMessage = "Password must be at least 6 characters.";
            return;
        }
        if (!string.Equals(registerRequest.Password, confirmPassword, StringComparison.Ordinal))
        {
            errorMessage = "Passwords do not match.";
            return;
        }

        isLoading = true;
        try
        {
            var apiBaseUrl = Configuration["ApiSettings:BaseUrl"] ?? "";
            var result = await JS.InvokeAsync<AuthJsResult>("registerFromBrowser", apiBaseUrl, registerRequest.Email, registerRequest.Password);
            if (!result.Success || string.IsNullOrEmpty(result.AccessToken))
            {
                errorMessage = result.Message ?? "Register failed.";
                return;
            }

            TokenStorage.SetAccessToken(result.AccessToken);
            if (AuthenticationStateProvider is JwtAuthenticationStateProvider jwtAuthProvider)
                jwtAuthProvider.NotifyUserAuthentication();
            Navigation.NavigateTo("/user/index", forceLoad: false);
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private class AuthJsResult
    {
        public bool Success { get; set; }
        public string? AccessToken { get; set; }
        public string? Message { get; set; }
    }

    private class RegisterForm
    {
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
    }
}

