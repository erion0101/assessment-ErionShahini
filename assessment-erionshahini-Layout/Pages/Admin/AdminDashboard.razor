@page "/admin"
@attribute [Authorize(Roles = "Admin")]
@using assessment_erionshahini_Layout.Data
@using assessment_erionshahini_Layout.Service
@using System.Linq
@using Microsoft.Extensions.Caching.Memory

<PageTitle>Admin - Video Lab</PageTitle>

<div class="vl-page vl-admin-dashboard">
    <h1 class="vl-admin-title">Admin Dashboard</h1>
    <p class="vl-text-muted">Manage and preview videos uploaded by users.</p>
    <div class="vl-admin-links">
        <a href="/admin/create-user" class="vl-admin-create-user-link">
            <span class="oi oi-plus" aria-hidden="true"></span>
            Create User
        </a>
        <a href="/admin/annotations" class="vl-admin-create-user-link">
            <span class="oi oi-comment-square" aria-hidden="true"></span>
            Annotations
        </a>
        <a href="/admin/bookmarks" class="vl-admin-create-user-link">
            <span class="oi oi-bookmark" aria-hidden="true"></span>
            Bookmarks
        </a>
    </div>

    @if (stats != null)
    {
        <div class="vl-stats-grid">
            <div class="vl-stat-card vl-stat-card-1">
                <span class="vl-stat-icon" aria-hidden="true">üìπ</span>
                <span class="vl-stat-value">@stats.Videos</span>
                <span class="vl-stat-label">Videos</span>
            </div>
            <div class="vl-stat-card vl-stat-card-2">
                <span class="vl-stat-icon" aria-hidden="true">üîñ</span>
                <span class="vl-stat-value">@stats.Bookmarks</span>
                <span class="vl-stat-label">Bookmarks</span>
            </div>
            <div class="vl-stat-card vl-stat-card-3">
                <span class="vl-stat-icon" aria-hidden="true">üìù</span>
                <span class="vl-stat-value">@stats.Annotations</span>
                <span class="vl-stat-label">Annotations</span>
            </div>
            <div class="vl-stat-card vl-stat-card-4">
                <span class="vl-stat-icon" aria-hidden="true">üë•</span>
                <span class="vl-stat-value">@stats.Users</span>
                <span class="vl-stat-label">Users</span>
            </div>
        </div>
    }

    <h2 class="vl-section-title">All Videos</h2>
    @if (error != null)
    {
        <div class="vl-alert vl-alert-error">@error</div>
    }

    @if (loading)
    {
        <div class="vl-admin-loading">
            <div class="vl-admin-loading-dots">
                <span></span><span></span><span></span>
            </div>
            <p class="vl-text-muted">Loading admin data‚Ä¶</p>
        </div>
    }
    else
    {
        @if (videos.Count == 0)
        {
            <div class="vl-card vl-empty-card">
                <p class="vl-text-muted">There are no videos at the moment.</p>
            </div>
        }
        else
        {
            <div class="vl-video-grid">
                @foreach (var (v, idx) in videos.OrderByDescending(x => x.UploadedAt).Select((v, i) => (v, i)))
                {
                    <article class="vl-card vl-video-card vl-video-card-animated" style="--vl-card-delay: @(Math.Min(idx, 12) * 0.04)s">
                        <a href="/admin/watch/@v.Id" class="vl-thumb-link" title="Open video">
                            <video class="vl-thumb-video" preload="metadata" muted playsinline src="@GetPlayableUrl(v)"></video>
                        </a>
                        <div class="vl-video-card-body">
                            <a href="/admin/watch/@v.Id" class="vl-video-title">@v.Title</a>
                            <p class="vl-video-uploader">@GetUploaderLabel(v)</p>
                            <p class="vl-video-time">@FormatTimeAgo(v.UploadedAt)</p>
                        </div>
                    </article>
                }
            </div>
        }
    }
</div>

@code {
    [Inject] private AuthenticatedApiClient Api { get; set; } = null!;
    [Inject] private IMemoryCache Cache { get; set; } = null!;
    [Inject] private NavigationManager Navigation { get; set; } = null!;
    [Inject] private IStreamTokenService StreamToken { get; set; } = null!;

    private readonly List<VideoItem> videos = new();
    private readonly Dictionary<Guid, string> streamTokens = new();
    private AdminStatsItem? stats;
    private bool loading = true;
    private string? error;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var videosTask = Api.GetAdminVideosAsync();
            var statsTask = Api.GetAdminStatsAsync();
            await Task.WhenAll(videosTask, statsTask);
            videos.Clear();
            videos.AddRange(await videosTask ?? Enumerable.Empty<VideoItem>());
            stats = await statsTask;
            streamTokens.Clear();
            foreach (var v in videos)
            {
                var token = Guid.NewGuid().ToString("N");
                streamTokens[v.Id] = token;
                Cache.Set($"stream:{v.Id}:{token}", true, TimeSpan.FromMinutes(20));
            }
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            loading = false;
        }
    }

    private string GetPlayableUrl(VideoItem v)
    {
        if (!streamTokens.TryGetValue(v.Id, out var token))
        {
            token = Guid.NewGuid().ToString("N");
            streamTokens[v.Id] = token;
            Cache.Set($"stream:{v.Id}:{token}", true, TimeSpan.FromMinutes(20));
        }
        var streamJwt = StreamToken.CreateStreamToken(v.Id);
        var baseUrl = Navigation.BaseUri.TrimEnd('/');
        return $"{baseUrl}/stream/{v.Id}?t={token}&st={Uri.EscapeDataString(streamJwt)}";
    }

    private static string GetUploaderLabel(VideoItem v)
    {
        if (!string.IsNullOrWhiteSpace(v.UploaderName))
            return v.UploaderName!;
        if (!string.IsNullOrWhiteSpace(v.UploaderEmail))
            return v.UploaderEmail!;
        return v.UserId.ToString("N")[..8];
    }

    private static string FormatTimeAgo(DateTime uploadedAt)
    {
        var span = DateTime.UtcNow - uploadedAt.ToUniversalTime();
        if (span.TotalMinutes < 1) return "just now";
        if (span.TotalHours < 1) return $"{(int)span.TotalMinutes} min ago";
        if (span.TotalDays < 1) return $"{(int)span.TotalHours} hour ago";
        if (span.TotalDays < 2) return "1 day ago";
        if (span.TotalDays < 30) return $"{(int)span.TotalDays} days ago";
        var months = (int)(span.TotalDays / 30);
        if (months < 2) return "1 month ago";
        if (months < 12) return $"{months} months ago";
        var years = (int)(span.TotalDays / 365);
        return years < 2 ? "1 year ago" : $"{years} years ago";
    }
}

<style>
