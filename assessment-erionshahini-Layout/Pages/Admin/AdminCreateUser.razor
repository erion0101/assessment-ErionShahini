@page "/admin/create-user"
@attribute [Authorize(Roles = "Admin")]
@using assessment_erionshahini_Layout.Data
@using assessment_erionshahini_Layout.Service
@using Microsoft.AspNetCore.Components.Forms

<PageTitle>Create User - Admin - Video Lab</PageTitle>

<div class="vl-page vl-admin-create-user">
    <div class="vl-create-user-header">
        <a href="/admin" class="vl-back">← Admin Dashboard</a>
        <h1>Create User</h1>
        <p class="vl-text-muted">Create a new user and assign a role.</p>
    </div>

    @if (successMessage != null)
    {
        <div class="vl-alert vl-alert-success" role="alert">
            <strong>@successMessage</strong>
            <a href="#" @onclick="ClearSuccess" @onclick:preventDefault>Create another</a>
            or
            <a href="/admin">Back to dashboard</a>.
        </div>
    }
    else if (error != null)
    {
        <div class="vl-alert vl-alert-error" role="alert">@error</div>
    }

    <div class="vl-card vl-create-user-card">
        @if (roles == null)
        {
            <p class="vl-text-muted">Loading roles…</p>
        }
        else if (roles.Count == 0)
        {
            <p class="vl-text-muted">No roles found. Ensure User and Admin roles exist in the database.</p>
        }
        else
        {
            <EditForm Model="model" OnValidSubmit="HandleSubmit" FormName="CreateUserForm">
                <DataAnnotationsValidator />
                <ValidationSummary class="vl-validation-summary" />

                <div class="vl-field">
                    <label class="vl-label" for="email">Email</label>
                    <InputText id="email" @bind-Value="model.Email" class="vl-input" type="email" placeholder="user@example.com" />
                </div>

                <div class="vl-field">
                    <label class="vl-label" for="password">Password</label>
                    <InputText id="password" @bind-Value="model.Password" class="vl-input" type="password" placeholder="At least 6 characters" />
                </div>

                <div class="vl-field">
                    <label class="vl-label" for="confirm">Confirm password</label>
                    <InputText id="confirm" @bind-Value="confirmPassword" class="vl-input" type="password" placeholder="Repeat password" />
                </div>

                <div class="vl-field">
                    <label class="vl-label" for="role">Role</label>
                    <InputSelect id="role" @bind-Value="model.RoleName" class="vl-input vl-select">
                        @foreach (var r in roles)
                        {
                            <option value="@r.Name">@r.Name</option>
                        }
                    </InputSelect>
                </div>

                <div class="vl-create-user-actions">
                    <button type="submit" class="vl-btn vl-btn-primary" disabled="@isSubmitting">
                        @if (isSubmitting)
                        {
                            <span class="vl-spinner" aria-hidden="true"></span>
                            <span>Creating…</span>
                        }
                        else
                        {
                            <span class="oi oi-plus" aria-hidden="true"></span>
                            <span>Create user</span>
                        }
                    </button>
                    <a href="/admin" class="vl-btn vl-btn-secondary">Cancel</a>
                </div>
            </EditForm>
        }
    </div>
</div>

@code {
    [Inject] private AuthenticatedApiClient Api { get; set; } = null!;
    [Inject] private NavigationManager Navigation { get; set; } = null!;

    private CreateUserModel model = new() { RoleName = "User" };
    private string confirmPassword = string.Empty;
    private List<RoleItem>? roles;
    private string? error;
    private string? successMessage;
    private bool isSubmitting;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            roles = await Api.GetAdminRolesAsync() ?? new List<RoleItem>();
            if (roles.Count > 0 && string.IsNullOrEmpty(model.RoleName))
                model.RoleName = roles[0].Name;
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
    }

    private async Task HandleSubmit()
    {
        error = null;
        successMessage = null;

        if (model.Password != confirmPassword)
        {
            error = "Passwords do not match.";
            return;
        }

        isSubmitting = true;
        try
        {
            await Api.CreateUserAsync(model.Email.Trim(), model.Password, model.RoleName ?? "User");
            successMessage = $"User '{model.Email}' created successfully with role '{model.RoleName}'.";
            model = new CreateUserModel { RoleName = model.RoleName };
            confirmPassword = string.Empty;
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void ClearSuccess()
    {
        successMessage = null;
    }

    private class CreateUserModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Email is required.")]
        [System.ComponentModel.DataAnnotations.EmailAddress(ErrorMessage = "Invalid email address.")]
        public string Email { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Password is required.")]
        [System.ComponentModel.DataAnnotations.MinLength(6, ErrorMessage = "Password must be at least 6 characters.")]
        public string Password { get; set; } = string.Empty;

        public string RoleName { get; set; } = "User";
    }
}

