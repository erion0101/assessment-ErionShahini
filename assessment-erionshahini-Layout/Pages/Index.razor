@page "/"
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Web
@layout EmptyLayout
@using assessment_erionshahini_Layout.Data
@using assessment_erionshahini_Layout.Service
@using assessment_erionshahini_Layout.ConnetionsWithAPIs

<PageTitle>Login - Video Lab</PageTitle>

<div class="vl-login">
    <div class="vl-login-card">
        <div class="vl-login-brand">
            <span class="vl-login-logo">▶</span>
            <h1>Video Lab</h1>
            <p class="vl-login-tagline">Upload, annotate, bookmark.</p>
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="vl-alert vl-alert-error" role="alert">@errorMessage</div>
        }

        <EditForm Model="loginRequest" OnValidSubmit="HandleLogin">
            <div class="vl-field">
                <label class="vl-label" for="email">Email</label>
                <InputText id="email" @bind-Value="loginRequest.Email" class="vl-input" placeholder="you@example.com" />
            </div>
            <div class="vl-field">
                <label class="vl-label" for="password">Password</label>
                <InputText id="password" type="password" @bind-Value="loginRequest.Password" class="vl-input" placeholder="••••••••" />
            </div>
            <button type="submit" class="vl-btn vl-btn-primary vl-btn-block" disabled="@isLoading">
                @if (isLoading)
                { <span>Signing in…</span> }
                else
                { <span>Sign in</span> }
            </button>
        </EditForm>

        <p class="vl-register-footnote">
            No account yet? <a href="/register">Create account</a>
        </p>
    </div>
</div>

@code {
    [Inject] private IJSRuntime JS { get; set; } = null!;
    [Inject] private IConfiguration Configuration { get; set; } = null!;
    [Inject] private TokenStorageService TokenStorage { get; set; } = null!;
    [Inject] private NavigationManager Navigation { get; set; } = null!;
    [Inject] private AuthenticationStateProvider AuthenticationStateProvider { get; set; } = null!;
    [SupplyParameterFromQuery(Name = "returnUrl")] public string? ReturnUrl { get; set; }

    private LoginRequest loginRequest = new();
    private string? errorMessage;
    private bool isLoading;

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = null;
        try
        {
            var apiBaseUrl = Configuration["ApiSettings:BrowserBaseUrl"] ?? Configuration["ApiSettings:BaseUrl"] ?? "";
            var result = await JS.InvokeAsync<LoginJsResult>("loginFromBrowser", apiBaseUrl, loginRequest.Email, loginRequest.Password);
            if (result.Success && !string.IsNullOrEmpty(result.AccessToken))
            {
                TokenStorage.SetAccessToken(result.AccessToken);
                if (AuthenticationStateProvider is JwtAuthenticationStateProvider jwtAuthProvider)
                    jwtAuthProvider.NotifyUserAuthentication();
                var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
                var user = authState.User;
                var returnUrl = IsSafeReturnUrl(ReturnUrl) ? ReturnUrl : null;
                if (!string.IsNullOrEmpty(returnUrl))
                    Navigation.NavigateTo(returnUrl, forceLoad: false);
                else if (user.IsInRole("Admin"))
                    Navigation.NavigateTo("/admin", forceLoad: false);
                else
                    Navigation.NavigateTo("/user/index", forceLoad: false);
            }
            else
                errorMessage = result.Message ?? "Login failed. Please check your credentials.";
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private static bool IsSafeReturnUrl(string? url)
    {
        if (string.IsNullOrWhiteSpace(url)) return false;
        if (!url.StartsWith("/", StringComparison.Ordinal) || url.StartsWith("//", StringComparison.Ordinal)) return false;
        return true;
    }

    private class LoginJsResult
    {
        public bool Success { get; set; }
        public string? AccessToken { get; set; }
        public string? Message { get; set; }
    }
}

